<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--tell to tomcat about HelloWorldServlet-->
    <servlet>
        <servlet-name>LifeCycleServlet</servlet-name>
        <servlet-class>com.wenyue.week3.demo.LifeCycleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.wenyue.week3.demo.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JDBCServlet</servlet-name>
        <servlet-class>com.wenyue.week4.demo.JDBCDemoServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <servlet-class>com.wenyue.week4.demo.ConfigDemoServlet</servlet-class>
        <init-param>
            <param-name>name</param-name>
            <param-value>wenyue</param-value>
        </init-param>
        <init-param>
            <param-name>studentId</param-name>
            <param-value>2019211001001112</param-value>
        </init-param>
    </servlet>
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.microsoft.sqlserver.jdbc.SQLServerDriver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:sqlserver://localhost:3306;DatabaseName=userdb</param-value>
    </context-param>
    <context-param>
        <param-name>Username</param-name>
        <param-value>sa</param-value>
    </context-param>
    <context-param>
        <param-name>Password</param-name>
        <param-value>123456789</param-value>
    </context-param>

    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/Life</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JDBCServlet</servlet-name>
        <url-pattern>/JDBC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfigDemoServlet</servlet-name>
        <url-pattern>/config</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LifeCycleServlet</servlet-name>
        <url-pattern>/life</url-pattern>
        <!--/life == LifeCycleServlet== com.wenyue.week3.demo.LifeCycleServlet-->
    </servlet-mapping>
</web-app>